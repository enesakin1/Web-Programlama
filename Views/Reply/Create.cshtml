@model myiotprojects.Models.PostReplyModel

<div class="container body-content">
    <div class="row sectionHeader">
        <span class="btn bg-white"><a class="backtoPost" asp-controller="Post" asp-action="Index" asp-route-id="@Model.PostId">Back to Post</a></span>
    </div>
        <div class="createReply">
            <form asp-action="AddReply" method="post" id="addPostForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="reply" asp-for="ReplyContent">Reply: </label>
                    <textarea asp-for="ReplyContent" rows="20" class="form-control" placeholder="Your reply"></textarea>
                    <span asp-validation-for="ReplyContent" class="text-danger"></span>
                </div>
                <button type="submit" class="btn submitReplyBtn">Submit Reply</button>
                <input asp-for="AuthorId" type="hidden" />
                <input asp-for="PostId" type="hidden" />
            </form>
        </div>
</div>
