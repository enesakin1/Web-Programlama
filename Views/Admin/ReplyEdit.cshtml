@model myiotprojects.Models.PostReply
<div class="container bg-white">
    <form asp-controller="Admin" asp-action="ReplyEdit" method="post">
        <div class="card-header">
            <h4 class="modal-title">@ViewData["Edit"] @ViewData["Reply"]</h4>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label>@ViewData["Content"]</label>
                <textarea asp-for="@Model.Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <input hidden asp-for="@Model.Id" class="form-control">
            <input type="submit" class="btn btn-info" value="@ViewData["Save"]">
        </div>
    </form>
</div>