@model myiotprojects.Models.Admin.Role
<div class="container bg-white">
    <form asp-controller="Admin" asp-action="RoleEdit" method="post">
        <div class="card-header">
            <h4 class="modal-title">@ViewData["Edit"] @ViewData["Role"]</h4>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label>@ViewData["Name"]</label>
                <input asp-for="@Model.Name" class="form-control">
            </div>
        </div>
        <div class="card-footer">
            <input hidden asp-for="@Model.Id" class="form-control">
            <input type="submit" class="btn btn-info" value="@ViewData["Save"]">
        </div>
    </form>
</div>