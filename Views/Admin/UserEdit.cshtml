@model myiotprojects.Models.Admin.UserModel
<div class="container bg-white">
            <form asp-controller="Admin" asp-action="UserEdit" method="post">
                <div class="card-header">
                    <h4 class="modal-title">@ViewData["Edit"] @ViewData["User"]</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>@ViewData["Nickname"]</label>
                        <input asp-for="@Model.Nickname" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Email"></label>
                        <input asp-for="@Model.Email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>@ViewData["ProfileImageUrl"]</label>
                        <input asp-for="@Model.ProfileImageUrl" class="form-control">
                    </div>
                </div>
                <div class="card-footer">
                    <input hidden asp-for="@Model.UserId" class="form-control">
                    <input type="submit" class="btn btn-info" value="@ViewData["Save"]">
                </div>
            </form>
</div>