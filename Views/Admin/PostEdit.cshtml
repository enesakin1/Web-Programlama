@model myiotprojects.Models.Post
<div class="container bg-white">
    <form asp-controller="Admin" asp-action="PostEdit" method="post">
        <div class="card-header">
            <h4 class="modal-title">@ViewData["Edit"] @ViewData["Post"]</h4>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label>@ViewData["Post"]</label>
                <input asp-for="@Model.Title" class="form-control">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@ViewData["Content"]</label>
                <textarea asp-for="@Model.Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <input hidden asp-for="@Model.Id" class="form-control">
            <input type="submit" class="btn btn-info" value="@ViewData["Save"]">
        </div>
    </form>
</div>