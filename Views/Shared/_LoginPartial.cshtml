@using Microsoft.AspNetCore.Identity
@using myiotprojects.Areas.Identity.Data

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

        <ul class="navbar-nav">
            @if (SignInManager.IsSignedIn(User))
            {
                <li class="nav-item">
                    <div class="p-md-2">
                        <a asp-controller="Profile" asp-action="Detail" asp-route-id="@UserManager.GetUserId(User)">
                            <img src="@UserManager.GetUserAsync(User).Result.ProfileImageUrl" class="rounded-circle profileNav" />
                        </a>
                            <a id="manage" asp-controller="Profile" asp-action="Detail" asp-route-id="@UserManager.GetUserId(User)" class="nav-link text-dark"  title="Profile">Hello @UserManager.GetUserAsync(User).Result.Nickname!</a>
                        
                        
                    </div>
                </li>
                <li class="nav-item">
                    <img class="rounded-circle profileNav" />
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                    </form>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                </li>
            }
        </ul>